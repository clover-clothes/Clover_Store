<body>
    <!-- header start -->
    <header class="header">
        <div class="header__top-bar">
            <div class="header__logo">
                <a href="#" class="header__logo--link"> <img src="~/Images/Icones/Logo.png" width="40%" alt=""> </a>
            </div>
            <form action="#" class="header__search">
                <input type="text"
                       class="header__search-input"
                       placeholder="Search different clothes" />
            </form>
            
           
            <div class="header__login">
               <div style="margin-right:50px">

                    <a asp-controller="ShoppingCart" asp-action="cart" class="sepp">
                        <span class="material-symbols-outlined">
                            shopping_cart
                            <h3 class="sepp">My Cart</h3>
                        </span>

                    </a>

                </div>
                
               @*  <a asp-controller="ShoppingCart" asp-action="cart" class="cart-icon">
                    <img  src="~/Images/cart-outline.svg" />
                    
                </a> *@
             
                


                <partial name="_LoginPartial" />
               @*  <a asp-controller="Loging" asp-action="logIn" class="header__login-link">Login</a> *@
            </div>
        </div>
        <nav class="header__category">
            <a href="#" class="btn btn--link">Men</a>
            <a href="#" class="btn btn--link">Women</a>
            <a href="#" class="btn btn--link">Kid</a>
            <a href="#" class="btn btn--link">Sport</a>
            <a href="#" class="btn btn--link">Dress</a>
            <a href="#" class="btn btn--link">Pants</a>
            <a href="#" class="btn btn--link">Skirt</a>
            <a href="#" class="btn btn--link">Undreware</a>
            <a href="#" class="btn btn--link">Shirt</a>
            <a href="#" class="btn btn--link">Sweat</a>
            <a href="#" class="btn btn--link">Shoes</a>

        </nav>
    </header>
    <!-- header end -->
    <!-- Home page main content start -->
    <!-- Hero section start -->

    <main class="main home">
        <section class="hero">
            <div class="container">
                <div class="hero__image-side">
                    <div class="hero__image-container">
                        <img src="~/Images/06674405800-p.jpg"
                             alt="hero image"
                             class="hero__image" />
                    </div>
                   
                </div>
                <div class="hero__content-side">
                   

                    <hgroup class="hero__title-group">
                        <p class="hero__sub-title">Clothes Store</p>
                        <h1 class="hero__title">The Best Clothes You'll Ever Buy</h1>
                    </hgroup>
                    <p class="hero__text">Most famous international brands and types of clothing await you.</p>
                    <a class="btn--primary">Discover More</a>
                </div>
            </div>
        </section>

        <!-- Hero section end -->
        <!-- Product section start -->

        <section class="products-section">
            <header class="section-header">
                <h2 class="section-title">Our products</h2>
            </header>
            <div class="container">
                <div class="product-grid">

                    @foreach (var product in Model)
                    {
                        
                        <article class="card">
                            <a asp-action="Details" asp-route-Id="@product.Id">
                            <div class="card__image-container">
                                @if (product.attributes[0].Images.Count!=0)
                                    {
                                        <img src="@product.attributes.FirstOrDefault().Images.FirstOrDefault().Image_url.ToString()" alt="product image" class="card__image" />
                                    }
                                    
                            </div>
                                <h3 class="card__title">@product.Title</h3>
                                <p class="card__description">@product.Description</p>
                            <div class="card__bottom">
                            <p class="card__price">
                                        <span class="card__price--number">@product.attributes[0].Price</span>
                            <span class="card__price--symbol">$</span>
                            </p>
                            <a href = "#" class="card__btn">Add to cart</a>
                            </div>
                            </a>
                           </article>


                       }
                    <article class="card">
                        <a  asp-controller="Home" asp-action="Details">
