@model ShoppingCart;

<form method="post">
    <input hidden asp-for="AttributId">
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-secondary bg-gradient text-light py-4">
            <div class="row">
                <div class="col-12 text-center">
                    <h3 class="text-white text-uppercase">@Model.attribut.Product.Title</h3>
                    <p class="text-white-50 fw-semibold mb-0">by Author</p>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="py-3">
                <div class="row">
                    <div class="col-6 col-md-2 offset-lg-1 pb-1">
                        <a class="btn btn-outline-primary bg-gradient mb-5 fw-semibold btn-sm text-uppercase">
                            <small>Back to home</small>
                        </a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-lg-3 offset-lg-1 text-center mb-3">
                        @if (Model.attribut.Images.Count > 0)
                        {
                            <img src="@Model.attribut.Images[0].Image_url" width="100%" class="rounded" />
                        }
                       
                    </div>
                    <div class="col-12 col-lg-6 offset-lg-1">

                        <div class="col-12 col-md-6 pb-4">
                            <span class="badge">
                           </span>
                        </div>
                        <div class="row ps-2">
                            <h6 class="text-dark text-opacity-50 ">Brend : @Model.attribut.Product.Brand_name</h6>
                        </div>
                        <div class="row ps-2">
                            <h6 class="text-dark text-opacity-50 ">Material : @Model.attribut.Product.Material</h6>
                        </div>
                        <div class="row ps-2">            
                            <h6 class="text-dark text-opacity-50 ">Colors :
                                @foreach (var attrib in Model.attribut.Product.attributes)
                                {
                                    <b style="color:rgb(@attrib.Color.Red,@attrib.Color.Green,@attrib.Color.Blue);"> @attrib.Color.Name </b><b>,</b>
                                                    
                                }                            
                           </h6>
                            
                        </div>
                        <div class="row ps-2">
                            <h6 class="text-dark text-opacity-50 ">
                                Sisez :
                                @foreach (var attrib in Model.attribut.Product.attributes)
                                {
                                    <b> @attrib.Size.Name ,</b>

                                }
                            </h6>

                        </div>
                        <div class="row ps-2">
                            <h6 class="text-dark text-opacity-50  pb-2">
                                List Price:
                                <span class="text-decoration-line-through">
                                    ListPrice
                                </span>
                            </h6>
                        </div>
                        <div class="row text-center ps-2">
                            <div class="p-1 col-3 col-lg-2 bg-white border-bottom">
                                <div class="text-dark text-opacity-50 fw-semibold">Quantity</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-white border-bottom">
                                <div class="text-dark text-opacity-50 fw-semibold">@Model.attribut.Product.Total_quantity</div>
                            </div>
                            
                        </div>
                        <div class="row text-center ps-2">
                            <div class="p-1 col-3 col-lg-2 bg-white text-secondary fw-bold">
                                <div>Price</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-white text-black fw-bold">
                                <div>@Model.attribut.Price</div>
                            </div>
                            
                        </div>
                        <div class="row pl-2 my-3">
                            <p class="text-secondary lh-sm">Description</p>
                            <p class="text-secondary lh-sm text-black">@Model.attribut.Product.Description</p>
                        </div>
                        <div class="row pl-2 mb-3">
                            <div class="col-md-4">
                                <div class="input-group mb-3">
                                    <span class="input-group-text bg-primary text-white border-0 fw-semibold"
                                          id="inputGroup-sizing-default">
                                        Count
                                    </span>
                                   
                                          <input asp-for="quantity" type="number" value="1" max="@Model.attribut.Quantity" class="form-control text-end"
                                        aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" />


                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 col-md-6 pb-1">
                                <button type="submit" 
                                        class="btn btn-primary bg-gradient  w-100 py-2 text-uppercase fw-semibold">
                                    Add to Cart
                                </button>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</form>




