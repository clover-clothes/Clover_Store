            </div>
            <div class="input-group">

                <label asp-for="Input.PhoneNumber">Phone Number</label>
                <input asp-for="Input.PhoneNumber" placeholder="05.." style="border-radius: 9px;" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="input-group">

                <label asp-for="Input.adres">Adres</label>
                <input asp-for="Input.adres"  placeholder="City name,Street name,Building number.." style="border-radius: 9px;" />
                <span asp-validation-for="Input.adres" class="text-danger"></span>
            </div>
            <div class="input-group">
                <select asp-for="Input.Gender" >
                    <option disabled selected>-Select Gender-</option>
                    <option >Male</option>
                    <option >Female</option>

                </select>
            </div>
          
            <div class="input-group">
                <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" >
                    <option disabled selected>-Select Role-</option>

                </select>
            </div>
            <button id="registerSubmit" type="submit" >Register</button>
        </form>

